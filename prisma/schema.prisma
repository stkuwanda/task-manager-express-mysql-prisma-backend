generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  name       String
  email      String   @unique
  password   String
  task       Task[] // Relaation to Task model. This means one user can have multiple tasks
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("users")
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  completed   Boolean  @default(false)
  userId      Int
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  user User @relation(fields: [userId], references: [id]) // Relation to User model. This  means each task belongs to one user

  @@map("tasks")
}
